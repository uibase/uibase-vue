<script>
  import BaseButton from '<%- this.path %>/Button';

  export default {
    title: 'Base UI/BaseButton',
    component: BaseButton,
  };

  const Template = (args, { argTypes }) => ({
    <% if (this.type === 'vue') { %>
    props: Object.keys(argTypes),
    components: { BaseButton },
    template: '<base-button type="primary">{{label}}</base-button>',
    <% } %>
  });

  export const Primary = Template.bind({});

  Primary.args = {
    label: 'Primary'
  }
</script>